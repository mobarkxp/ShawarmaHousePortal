            <div class="card-header pb-0">
                <div class="row mb-3">
                    <div class="col-6">
                        <h6>المتقدمين الجدد</h6>
                       
                    </div>
                    <div class="col-6 my-auto text-start">
                        <div class="dropdown float-start ps-4">
                            <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-ellipsis-v text-secondary"></i>
                            </a>
                            <ul class="dropdown-menu px-2 py-3 me-n4" aria-labelledby="dropdownTable">
                                <li><a class="dropdown-item border-radius-md" href="#">الكل</a></li>
                                <li><a class="dropdown-item border-radius-md" href="#">الجميع</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0 pb-2">
                <div class="table-responsive">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">الاسم</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">الوظيفة</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">الراتب المتوقع</th>
                                <th class=" text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">قوة السيرة الذاتية</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Employees)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">

                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.Name </h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">@item.JobTitle </h6>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center text-sm">
                                        <span class="text-xs font-weight-bold"> @item.ExpectSalary </span>
                                    </td>

                                    <td class=" text-sm">
                                        <div class="progress-wrapper w-75 mx-auto">
                                            <div class="progress-info">
                                                <div class="progress-percentage">
                                                    <span class="text-xs font-weight-bold">90%</span>
                                                </div>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-gradient-info w-60" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
