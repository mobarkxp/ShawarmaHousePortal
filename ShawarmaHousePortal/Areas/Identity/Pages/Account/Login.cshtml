@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل دخول";
}


<div class="container vh-100  ">
    <div class="row h-100 justify-content-center align-items-center">
        
        <div class="col-md-6 card shadow">
            <div class=" card-body">
                <section>
                    <form id="account" method="post">

                        <div class="text-center card-title">تسجيل دخول </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mt-1">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-1">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox">
                               
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label>نسيت الرمز السري ؟</label>
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-sm bt">دخول</button>
                        </div>
                        <div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">نسيت الرمز السري؟</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل جديد</a>
                            </p>

                        </div>
                    </form>
                </section>
            </div>
        </div>

       

    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
